<div class="db mt4 w-100 tc tl-ns">
  <div class="dib v-mid mr3">
    <%=  if @team_member["image"] != "" do %>
      <img src="/images/ttrr_team/<%=  @team_member["image"]%>" class="br-100 h4 w4" alt="avatar">
    <% else %>
      <div class="br-100 h4 w4 bg-light-gray"></div>
    <% end %>
  </div>
  <div class="dib v-mid w-60-ns w-100">
    <h4>
      <%= @team_member["name"] %>
      <%= if @team_member["title"] != "" do %> - <%=@team_member["title"]%><% end %>
    </h4>
    <p>
      <%= @team_member["description"] %>
      <ul class="list pl1">
        <%= for link <- @team_member["links"] do %>
        <li class="mb2">
          <a href="<%= link["url"] %>">
            <%= if link["name"] do %>
            <%= link["name"] %>
            <%= else %>
            <%= link["url"] %>
            <% end %>
          </a>
        </li>
        <% end %>
      </ul>
    </p>
  </div>
</div>
